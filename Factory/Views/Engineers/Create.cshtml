@model Factory.Models.Engineer

<h4>Add a new engineer</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@required="required"})

  @Html.LabelFor(model => model.StartDate)
  @Html.TextBoxFor(model => model.StartDate, new {@type="date", @required="required"})

  @Html.Label("Select a factory location")
  @Html.DropDownList("LocationId")

  <input type="submit" value="Add new engineer" class="btn btn-default" />
}