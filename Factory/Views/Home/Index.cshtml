@using System.Collections.Generic;
@using Factory.Models;

@{
  List<Machine> machines = ViewData["machines"] as List<Machine>;
}

@{
  List<Engineer> engineers = ViewData["engineers"] as List<Engineer>;
}

<h3>All factories stats</h3>
<h4>All Machines</h4>
@foreach (Machine machine in machines)
{
  <li>@Html.ActionLink($"{@machine.Model}", "Details", "Machines", new { id = machine.MachineId })</li>
}

<h4>All Machines</h4>
@foreach (Engineer engineer in engineers)
{
  <li>@Html.ActionLink($"{@engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId })</li>
}

